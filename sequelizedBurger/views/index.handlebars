<div class="container">
    {{!-- heading of the page --}}
    <div class="jumbotron">
        <img src="/assets/img/background.jpg" alt="burger">
        <h3>Eat-Da-Burger!</h3>
    </div>
  
{{!-- Update burger details --}}
   <div class="row">
        <ol class = "list-group">
           {{#each burgers}}
            {{#unless this.devoured}}
                <li class = "list-group-item">
                    <form class="form-inline" action="burgers/{{this.id}}?_method=PUT" method="POST">
                        <div class="form-group col-sm-4">
                            <h2>Ready To Eat-Da-Burger </h2>
                                <div class="input-group"> 
                                    <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="input" name = "devoured" value="{{this.burger_name}}">
                                </div>
                        </div>
                        <div class="form-group col-sm-4">
                            <div class="input-group">
                              <h2> Customer Name </h2>
                              <input type="text" class="form-control" id="input" name="customerName" placeholder="Customer?" />
                              <button type="submit" class="btn btn-default customer">Devour it!</button>                        
                            </div>
                        </div>
                    </form>
                </li>
            {{/unless}}
            {{/each}}
        </ol>
        

{{!-- Display Burger Details --}}

    {{!-- <div class = "row"> --}}
        <div class="form-group col-sm-3">
            <h2>Devoured Burgers</h2>
            <div class="input-group"> 
                <ol class = "list-group">
                    {{#each burgers}}
                        {{#if this.devoured}}
                            <li class="list-group-item">
                                <input type="text" class="form-control" id="input" value="{{this.id}} (eaten by{{this.customer.name}})" />
                            </li>
                        {{/if}}
                    {{/each}}
                </ol>
            </div>
        </div>
    
    </div>

{{!-- Enter the burger details --}}
    <div class="col-md-10 col-md-offset-1 newBurgerDetails">
       
        {{!-- Create form --}}
        <form class="form-inline" action="burgers/" method="POST">
            <p class="lead"> Enter a burger you want to eat Click the "Submit" button</p>
            <div class="form-group">
                <input class="form-control mb-2 mr-sm-2 mb-sm-0" type="text" name="b_name"/>
            </div>
            <button class = "btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</div>
